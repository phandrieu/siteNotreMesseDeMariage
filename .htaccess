# Activation du moteur de réécriture
RewriteEngine On

# Redirection permanente des URLs avec .html vers les URLs sans extension
RewriteCond %{THE_REQUEST} ^GET\ (.*)\.html\ HTTP
RewriteRule (.*)\.html$ $1 [R=301,L]

# Réécriture interne : ajoute .html si le fichier existe
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteCond %{REQUEST_URI} !/$
RewriteRule ^(.*)$ $1.html [L]

# Redirection de www vers non-www (optionnel, mais recommandé pour le SEO)
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Force HTTPS (optionnel, mais recommandé)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
